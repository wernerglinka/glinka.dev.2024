{#
  Contact Form
  Renders a Netlify contact form

  YAML example:
  - column:
    blocks:
      - name: contact-form
        blockClass: ""
#}

<div class="block block-contact-form">
  <div class="form-wrapper">
    <form action="/" method="post" name="contact" netlify netlify-honeypot="bot-field">
      <div class="form-row">
        <input type="text" id="inputName" name="name" placeholder="Name" required />
      </div>
      <div class="form-row">
        <input type="text" id="inputEmail" name="email" placeholder="Email Address" required />
      </div>
      <div class="form-row">  
        <input type="text" name="subject" placeholder="Subject" required />
      </div>
      <div class="form-row">
        <textarea id="textarea" name="comment" placeholder="Message" required></textarea>
      </div>
      <p class="hidden"><label>Bot field: <input name="bot-field"></label></p>
      <div id="result"></div>
      <div data-netlify-recaptcha></div>
      <div class="form-row">
        <input type="submit" value="SUBMIT" class="btn-submit" />
      </div>
    </form>
  </div><!-- /.form-wrapper -->
</div><!-- /.block-contact-form -->