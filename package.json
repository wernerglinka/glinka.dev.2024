{
  "name": "werner-glinka-website",
  "version": "0.0.2",
  "description": "A Metalsmith portfolio website",
  "keywords": [
    "metalsmith",
    "portfolio"
  ],
  "author": "werner@glinka.co",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development node ./scripts/watch.js",
    "build": "cross-env NODE_ENV=production node metalsmith.js",
    "watch": "nodemon metalsmith.js",
    "serve": "browser-sync start --server 'build' --files 'build/**'"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "templates"
    ],
    "ext": "js css scss njk json html md"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1"
  },
  "dependencies": {
    "@barba/core": "^2.9.7",
    "@barba/css": "^2.1.15",
    "@metalsmith/collections": "^1.3.0",
    "@metalsmith/drafts": "^1.3.0",
    "@metalsmith/js-bundle": "^0.5.0",
    "@metalsmith/layouts": "^2.7.0",
    "@metalsmith/markdown": "^1.10.0",
    "@metalsmith/metadata": "^0.3.0",
    "@metalsmith/permalinks": "^2.5.1",
    "@metalsmith/postcss": "^5.4.1",
    "@metalsmith/sass": "^1.6.0",
    "@wernerglinka/cloudinaryimage": "^1.1.3",
    "@wernerglinka/linkcomponent": "^1.0.3",
    "@wernerglinka/truncatedaptitle": "^0.0.12",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "esbuild": "^0.19.0",
    "isotope-layout": "^3.0.6",
    "jstransformer-markdown": "^1.2.1",
    "jstransformer-nunjucks": "^1.2.0",
    "lodash": "^4.17.21",
    "marked": "^7.0.1",
    "marked-highlight": "^2.0.4",
    "metalsmith": "^2.6.1",
    "metalsmith-debug-ui": "^0.3.2",
    "metalsmith-html-minifier": "^4.0.1",
    "metalsmith-if": "^0.1.1",
    "metalsmith-include-files": "^1.0.1",
